{% extends 'MaithCommonAdminBundle::adminlayout.html.twig' %}

{% block stylesheets %}

{% endblock %}

{% block javascripts %}
{% endblock %}


{% block body %}
<!-- content wrapper -->
 <div class="row">
    <div class="col-md-6">
    <div class="panel">
      <div class="panel-heading">
          Configurar parametros
      </div>
        <div class="panel-body">
            <form action="{{ path('maith_admin_parameters_config')}}" method="post" {{ form_enctype(form) }} role="form">
              {% for counter in counters %}
                <div class="form-group">
                    {{ form_errors(attribute(form,"param_"~ counter)) }}
                    {{ form_label(attribute(form,"param_" ~ counter)) }}
                    {{ form_widget(attribute(form,"param_" ~ counter), {'attr' : {'class' : 'form-control'}}) }}
                </div>
              {% endfor %}

              <div class="form-group">
                <button type="submit" class="btn btn-default">Guardar</button>
              </div>
              {{ form_rest(form) }}
            </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
