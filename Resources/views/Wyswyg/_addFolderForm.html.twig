<div class="panel">
    <div class="panel-heading">
        Crear carpeta
    </div>
      <div class="panel-body">
          {{ form_start(form, {'attr' : {'role' : 'form', 'onsubmit': 'return wyswygManager.getInstance().addNewFolder(this);'}}) }}
            <div class="form-group">
                  {{ form_errors(form.name) }}
                  <label for="{{ form.name.vars.id }}">Nombre</label>
                  {{ form_widget(form.name) }}
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-default"><i class="fa fa-save"></i> Crear</button>
            </div>	
            {{ form_end(form) }}
      </div>
  </div>
